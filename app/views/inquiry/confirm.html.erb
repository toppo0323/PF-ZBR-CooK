<div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>お問い合わせ</h2>
    <%= form_with model: @inquiry, url: inquiry_thanks_path, local:true do |f| %>
      <div>
        <%= f.label :ニックネーム： %>
        <%= f.hidden_field :name %>
        <%= @inquiry.name %>
      </div>
      <div>
        <%= f.label :メールアドレス： %>
        <%= f.hidden_field :email %>
        <%= @inquiry.email %>
      </div>
      <div>
        <%= f.label :お問い合わせ内容： %>
        <%= f.hidden_field :message%>
        <%= safe_join(@inquiry.message.split("\n"),tag(:br))%>
      </div>
      <div>
        <%= f.submit "送信する", class: 'btn btn-secondary ' %>
      </div>
    <% end %>
  </div>
</div>