<div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>お問い合わせ</h2>
    <%= form_with model: @inquiry, url: inquiry_confirm_path, local:true do |f| %>

    <% if @inquiry.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :ニックネーム %><span class="text-danger">（必須）</span>
      <%= f.text_field :name , class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.label :メールアドレス %><span class="text-danger">（必須）</span></th>
      <%= f.text_field :email, class: "form-control email" %>
    </div>
    <div class="form-group">
      <%= f.label :お問い合わせ内容 %>
      <%= f.text_area :message, class: "form-control message" %>
    </div>
    <div class="form-group">
      <%= f.submit "確認ページへ", class: 'btn btn-secondary' %>
    </div>
    <% end %>
  </div>
</div>