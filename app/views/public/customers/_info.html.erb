<% if current_customer!= customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "Unfollow", customer_follow_relationships_path(customer.id), method: :delete %>
  <% else %>
    <%= link_to "Follow", customer_follow_relationships_path(customer.id), method: :post %>
  <% end %>
<% end %>