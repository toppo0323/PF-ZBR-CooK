
<!--フォロー機能-->
<% if current_customer!= customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォローを外す", customer_follow_relationships_path(customer.id), class: "btn btn-outline-info", method: :delete %>
  <% else %>
    <%= link_to "＋フォローする", customer_follow_relationships_path(customer.id), class: "btn btn-outline-info", method: :post %>
  <% end %>
<% end %>