<h2>Follower Users</h2>
<% if @customer.exists? %>
  <table class="table table-hover table-inverse">
    <tbody>
      <% @customer.each do |customer| %>
        <tr>
          <td>
            <%= link_to recipelist_customer_path(customer.id) do %>
              <%= attachment_image_tag customer, :image, class: "rounded-circle", size: "40x40" %>
              <%= customer.name %>
            <% end %>
          </td>
          <td>フォロー数: <%= customer.followings.count %></td>
          <td>フォロワー数: <%= customer.followers.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>

