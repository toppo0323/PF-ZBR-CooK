<h2 class = "mb-4">みんなのずぼらレシピ</h2>

  <span class="new-recipe">
    <i class="fas fa-plus"></i>
    <%= link_to"レシピの新規登録", new_recipe_path %>
    <i class="fa fa-utensils"></i>
  </span>


<div class = "row mt-5">
  <div class="col-9">
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="card-group mb-3 col-4">
          <%= link_to recipe_path(recipe.id), { class: "w-100" } do%>
            <div class="card">
              <%= attachment_image_tag recipe, :image, size: "100x230", class: "bd-placeholder-img card-img-top" %>
              <div class="card-body">
                <div class="card-img-overlay ">
                  <i class="far fa-heart">
                  <%="#{recipe.likes.count}" %>
                  </i>
                  <i class="far fa-comment-dots">
                  <%="#{recipe.comments.count}" %>
                  </i>
                </div>
                <h5 class="card-title">
                  <%= recipe.name %>
                </h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
  <div class="pagination"><%= paginate(@recipes) %></div>
    </div>
  </div>

  <div class="col-md-3" style="overflow-y:scroll; height:300px;">   <%# overflowでスクロールバーを作る %>
      <table class="table table-bordered genre-table table-hover" bgcolor="#ffffff">
        <thead>
          <tr>
            <th class="genre-title">ジャンル</th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.name, search_path('genre': genre), method: :get %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>