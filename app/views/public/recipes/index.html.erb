<h1>レシピ</h1>

<table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_path(genre), method: :get %>
        </td>
      </tr>

    <% end %>
    </tbody>
</table>

<% @recipes.each do |recipe| %>

<div>


  <h5>料理名</h5><p><%= recipe.name %></p>
  <h5>IMAGE</h5><p><%= attachment_image_tag recipe, :image, size: "210x150" %></p>
  <%= link_to "レシピ詳細を見る", recipe_path(recipe.id) %>
  <p><%= link_to "#{recipe.comments.count} コメント", recipe_path(recipe.id) %></p>

</div>

<% end %>


<%= link_to "レシピ新規投稿", new_recipe_path %>

<h4>ランキング</h4>
<p><% @all_ranks.each do |recipe| %>

 <%= link_to recipe.name, recipe_path(recipe.id) %>
</p>
<% end %>