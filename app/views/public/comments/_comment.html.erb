<div class = "comments">
   <h5 class="border-bottom font-weight-bold">
     -レシピへのコメントや感想はこちらに！-
     コメント数:<%= @recipe.comments.count %>
    </h5>

   <% @recipe.comments.each do |comment| %>
   <div class="comment-index py-2">
     <%= link_to recipelist_customer_path(comment.customer.id) do %>
     <%= attachment_image_tag comment.customer, :image, class: "rounded-circle", size: "40x40" %>
     <% end %>
     <%= comment.customer.name %>
     「<%= comment.comment %>」
     <%= comment.created_at.strftime('%Y/%m/%d') %>
    <% if comment.customer == current_customer %>
       <%= link_to recipe_comment_path(comment.recipe,comment), method: :delete, "data-confirm" => "本当に削除しますか？", remote: true do %>
       <i class="fas fa-trash-alt"></i>
       <% end %>
    <% end %>
    </div>
   <% end %>


  </div>